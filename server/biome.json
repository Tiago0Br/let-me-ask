{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "semicolons": "asNeeded",
      "trailingCommas": "es5",
      "quoteStyle": "single",
      "lineWidth": 90,
      "jsxQuoteStyle": "double"
    }
  },
  "html": {
    "formatter": {
      "enabled": true,
      "lineWidth": 90,
      "indentStyle": "space",
      "indentWidth": 2
    }
  }
}